# AI Excel Interviewer Environment Configuration
# Copy this file to .env and fill in your actual API keys and settings

# === LLM Provider API Keys ===
# Get these from respective provider dashboards:
# - Gemini: https://makersuite.google.com/app/apikey
# - Groq: https://console.groq.com/keys  
# - Anthropic: https://console.anthropic.com/

GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === LLM Provider Configuration ===
PRIMARY_LLM_PROVIDER=gemini
FALLBACK_LLM_PROVIDER=groq
MODEL_NAME=gemini-2.0-flash-exp

# === Cost Management ===
# Daily spending limits (USD)
DAILY_COST_LIMIT=50.00
PROVIDER_COST_LIMITS={"gemini": 30.00, "groq": 5.00, "claude": 15.00}

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100
RATE_LIMIT_TPM=50000

# === Database Configuration ===
# For development: SQLite (no setup required)
DATABASE_URL=sqlite:///./data/interviews.db

# For production: PostgreSQL (recommended)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# === Application Settings ===
DEBUG=true
LOG_LEVEL=INFO

# CORS settings - adjust for your frontend domain
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Session settings
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_INTERVIEWS=10

# === Security Settings ===
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=120

# === Interview Configuration ===
# Question pool settings
MIN_QUESTIONS_PER_SKILL=3
MAX_INTERVIEW_QUESTIONS=25
CALIBRATION_QUESTIONS=4
TIME_LIMIT_MINUTES=45

# Scoring thresholds
PASS_THRESHOLD=70.0
PROFICIENT_THRESHOLD=80.0
ADVANCED_THRESHOLD=90.0

# Model temperature settings
TEMPERATURE_INTERVIEW=0.7
TEMPERATURE_GRADING=0.3

# === Feature Flags ===
ENABLE_WEBSOCKETS=true
ENABLE_STREAMING=true
ENABLE_CACHING=true

# === Monitoring & Analytics ===
# Optional: Application monitoring
SENTRY_DSN=your_sentry_dsn_here

# Optional: Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google_analytics
ANALYTICS_ID=your_analytics_id_here

# === Development Settings ===
# Auto-reload on code changes
RELOAD=true

# Mock LLM responses (for testing without API costs)
MOCK_LLM_RESPONSES=false

# Sample data seeding
SEED_DATABASE_ON_STARTUP=true

# === Production Overrides ===
# Uncomment these for production deployment:
# DEBUG=false
# LOG_LEVEL=WARNING
# RELOAD=false
# MOCK_LLM_RESPONSES=false
# SEED_DATABASE_ON_STARTUP=false
MAX_TOKENS=1000
